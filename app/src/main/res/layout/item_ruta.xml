<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
											 xmlns:app="http://schemas.android.com/apk/res-auto"
											 xmlns:tools="http://schemas.android.com/tools"
											 android:layout_width="match_parent"
											 android:layout_height="72dp">

	<ImageView
			android:layout_width="80dp"
			android:layout_height="44.8dp" app:srcCompat="@android:color/holo_red_light"
			android:id="@+id/imagenRuta"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="12dp" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
			app:layout_constraintTop_toTopOf="parent"/>
	<TextView
			android:text="TextView"
			android:layout_width="225dp"
			android:layout_height="0dp"
			android:id="@+id/nombreRuta"
			android:ellipsize="marquee"
			android:singleLine="true"
			android:marqueeRepeatLimit="marquee_forever"
			android:scrollHorizontally="true"
			android:textSize="16sp" android:textStyle="bold" android:textColor="#000000"
			android:layout_marginTop="16dp"
			app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
			android:fontFamily="@font/raleway_bold" app:layout_constraintStart_toEndOf="@+id/imagenRuta"/>
	<TextView
			android:text="TextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/sentido"
			android:ellipsize="marquee"
			android:singleLine="true"
			android:marqueeRepeatLimit="marquee_forever"
			android:scrollHorizontally="true"
			android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginTop="4dp"
			app:layout_constraintTop_toBottomOf="@+id/nombreRuta" app:layout_constraintVertical_bias="0.0"
			android:layout_marginStart="16dp" app:layout_constraintStart_toEndOf="@+id/imagenRuta"
			android:fontFamily="@font/raleway_semibold" android:textSize="12sp"/>
</android.support.constraint.ConstraintLayout>